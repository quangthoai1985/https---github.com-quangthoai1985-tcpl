
{
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules",
    "bucket": "chuan-tiep-can-pl"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "runtime": "nodejs20",
      "predeploy": [
        "npm --prefix functions run build"
      ]
    }
  ],
  "apphosting": {
    "backendId": "chuan-tiep-can-pl",
    "rootDir": "/",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions",
      "backups"
    ],
    "alwaysDeployFromSource": true
  }
}
