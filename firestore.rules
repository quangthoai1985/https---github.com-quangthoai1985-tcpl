rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to get user's role from custom claims
    function getRole() {
      return request.auth.token.role;
    }

    // Helper function to check if a user is an admin
    function isAdmin() {
      return isSignedIn() && getRole() == 'admin';
    }

    // Helper function to check if a user is a commune staff member
    function isCommuneStaff() {
      return isSignedIn() && getRole() == 'commune_staff';
    }
    
    // Check if the request is from a user associated with a specific communeId
    function isOwner(communeId) {
      return isCommuneStaff() && request.auth.token.communeId == communeId;
    }

    // =====================================================================
    // Rule for 'users' collection
    // =====================================================================
    match /users/{userId} {
      // Admins can read and write any user profile
      allow read, write: if isAdmin();
      // Users can read and update their own profile
      allow get, update: if isSignedIn() && request.auth.uid == userId;
    }
    
    // =====================================================================
    // Rule for 'units', 'assessmentPeriods', 'criteria', 'guidanceDocuments'
    // These are considered public and readable by any authenticated user.
    // Only admins can modify them.
    // =====================================================================
    match /{collectionName}/{docId} where collectionName in ['units', 'assessmentPeriods', 'criteria', 'guidanceDocuments', 'configurations'] {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // =====================================================================
    // Rule for 'assessments' collection
    // =====================================================================
    match /assessments/{assessmentId} {
        // Admins can read/write any assessment
        allow read, write: if isAdmin();

        // Commune staff can read their own assessment
        allow get: if isCommuneStaff() && resource.data.communeId == request.auth.token.communeId;
        
        // Commune staff can list only their own assessments
        allow list: if isCommuneStaff() && request.query.where.communeId == request.auth.token.communeId;

        // Commune staff can create an assessment for their own commune
        allow create: if isOwner(request.resource.data.communeId);
        
        // Commune staff can update their own assessment
        allow update: if isOwner(resource.data.communeId);
    }
    
    // =====================================================================
    // Rule for 'signature_checks' collection (written by Cloud Function)
    // =====================================================================
    match /signature_checks/{checkId} {
      // Only backend (Cloud Functions) can write. Admins can read.
      allow read: if isAdmin();
      allow write: if false; // No client-side writes
    }
  }
}
