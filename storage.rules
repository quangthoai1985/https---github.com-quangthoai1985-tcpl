rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // --- QUY TẮC CHO CÁC THƯ MỤC CHUNG ---

    // Chỉ người dùng đã đăng nhập mới được đọc config và guidance
    match /config/{path=**} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.role == 'admin';
    }

    match /guidance/{path=**} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.role == 'admin';
    }

    // --- QUY TẮC QUAN TRỌNG NHẤT CHO HỒ SƠ MINH CHỨNG ---
    
    match /hoso/{communeId}/{allPaths=**} {
      
      // Cho phép ĐỌC nếu là Admin HOẶC đúng là người của xã đó.
      allow read: if request.auth.token.role == 'admin' || 
                  request.auth.token.communeId == communeId;
      
      // Cho phép GHI (tạo/cập nhật) nếu:
      // 1. Người dùng là Admin, HOẶC
      // 2. Người dùng là Cán bộ xã, ghi vào đúng thư mục của xã mình, VÀ file nhỏ hơn 5MB.
      allow write: if request.auth.token.role == 'admin' ||
                   (request.auth.token.role == 'commune_staff' &&
                    request.auth.token.communeId == communeId &&
                    request.resource.size < 5 * 1024 * 1024);
      
      // CHẶN người dùng tự XÓA file từ giao diện.
      allow delete: if false;
    }
  }
}