rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Bất kỳ ai đã đăng nhập đều có thể ghi (tải lên) tệp.
      allow write: if request.auth != null;

      // Bất kỳ ai cũng có thể đọc tệp. 
      // Điều này là cần thiết để các dịch vụ bên ngoài như Google Docs Viewer có thể truy cập và hiển thị tệp.
      // Các tệp không chứa thông tin nhạy cảm, chỉ là minh chứng.
      allow read;
    }
  }
}
