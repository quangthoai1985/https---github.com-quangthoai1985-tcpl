rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow debug writes for authenticated users
    match /debug/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // Allow commune staff to write to their own evidence folder
    match /hoso/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Allow authenticated users to read files (e.g., admins)
    }

    // Allow anyone to read guidance documents and config files
    match /guidance_documents/{allPaths=**} {
      allow read;
    }
    match /config/{allPaths=**} {
      allow read;
    }
  }
}
